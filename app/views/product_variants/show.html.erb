
<% provide(:title, @product_variant.product.name) %>
<div class="row">
  <% product = @product_variant.product %>
  <section>
    <h1>
      <%= product.name %>
    </h1>
      <aside class="prodimg">
        <% all_picture_urls = @product_variant.pictures.map { |p| p.picture.url } %>
        <%= carousel_for(all_picture_urls) if all_picture_urls.any? %>
      </aside>
      <div class="description">
        <strong class="lead"> Price: </strong><strong class="price"><%= @product_variant.price_cents.format %></strong>
      </div>
      <div class="description">
        <%= product.description %>
      </div>
    <% if product.product_variants.count > 1 %>
      <div class="description">
        <div class="dropdown">
          <a class="btn btn-default" data-toggle="dropdown">Select <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% product.product_variants.each do | pv | %>
              <li><a tabindex="1"><%= link_to pv.variation, pv %> </a></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <%= render 'cart_items/add_item_menu' %>
  </section>
  <h2><a href="/products"><button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-arrow-left"></span> Back to Products
  </button></a></h2>
</div>



