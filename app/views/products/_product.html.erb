<li id="product-<%= product.id %>">
  <%= product.name %>
  <%= link_to "view", product.product_variants.first %>
  <% if logged_in? && current_user.admin? %>
    | <%= link_to "Edit", edit_product_path(product) %>
    | <%= link_to "Delete", product, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>
