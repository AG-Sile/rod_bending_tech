<div class='nested-fields'>
  <div class="field">
    <%= f.label "Variation (enter \"default\" if there is no variation for this product)" %>
    <%= f.text_field :variation, class: 'form_control' %>
  </div>
  <div class="field">
    <%= f.label "Price for this variation of the product" %>
    <%= f.text_field :price_cents, class: 'form_control' %>
  </div>
  <div class="field">
    <%= f.label :weight_pounds %>
    <%= f.number_field :weight_pounds, class: 'form_control' %>
  </div>
  <div class="field">
    <%= f.label :weight_ounces %>
    <%= f.number_field :weight_ounces, class: 'form_control' %>
  </div>

  <div class="field">
    <%= f.label :height %>
    <%= f.number_field :height, class: 'form_control' %>
  </div>

  <div class="field">
    <%= f.label :width %>
    <%= f.number_field :width, class: 'form_control' %>
  </div>

  <div class="field">
    <%= f.label :length %>
    <%= f.number_field :length, class: 'form_control' %>
  </div>
  <div class='field'>
  <div class='links'>
    <%= link_to_add_association "Add a Picture", f, :pictures %>
  </div>
</div>
  <%= link_to_remove_association "Remove Variant", f %>
</div>
