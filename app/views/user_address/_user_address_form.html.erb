  <div class='nested-fields'>
  <div class="row">
    <div class="field">
      <div class="col-md-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="field">
        <%= f.label :street_address_1 %>
        <%= f.text_field :street_address_1, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.label :street_address_2 %>
        <%= f.text_field :street_address_2, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="field">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="field">
        <%= f.label :state %>
        <%= f.select :state, UserAddress.list_of_allowed_states, class: 'form-control' %>
       </div>
     </div>
   </div>
</div>
